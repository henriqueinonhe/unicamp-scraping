{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true, 
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules"],
  "typedocOptions": {
    "out": "docs",
    "inputFiles": "./src",
    "mode": "file",
    "ignoreCompilerErrors": true,
    "excludeNotExported": true
  }
}